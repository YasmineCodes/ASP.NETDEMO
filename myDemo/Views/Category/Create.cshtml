@model Category

<form action="" method="post">
    <div class="card border-primary p-3 mt-4">
        <div class="row pb-2">
            <h2 class="">Create Category</h2>
            <hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary" style="width:150px">Submit</button>
            <a asp-controller="Category" asp-action="index" class="btn btn-secondary" style="width:150px">Back to
                List</a>
        </div>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}